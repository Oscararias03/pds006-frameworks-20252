generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Owner {
  id             String          @id @default(uuid())
  name           String
  computers      Computer[]
  medicalDevices MedicalDevice[]
}

model Computer {
  id               String            @id @default(uuid())
  brand            String
  model            String
  color            String?
  photoURL         String
  ownerId          String
  checkinAt        DateTime?
  checkoutAt       DateTime?
  updatedAt        DateTime          @updatedAt
  owner            Owner             @relation(fields: [ownerId], references: [id])
  frequentComputer FrequentComputer?
}

model MedicalDevice {
  id         String    @id @default(uuid())
  brand      String
  model      String
  photoURL   String
  ownerId    String
  checkinAt  DateTime?
  checkoutAt DateTime?
  serial     String
  updatedAt  DateTime  @updatedAt
  owner      Owner     @relation(fields: [ownerId], references: [id])
}

model FrequentComputer {
  id          String   @id @default(uuid())
  computerId  String   @unique
  checkinURL  String
  checkoutURL String
  computer    Computer @relation(fields: [computerId], references: [id])
}
