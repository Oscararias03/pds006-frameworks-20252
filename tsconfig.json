{
  "compilerOptions": {
  "target": "ESNext",
  "module": "ESNext",
  "moduleResolution": "Bundler",
  "types": ["bun-types"],
  "rootDir": "src",
  "outDir": "dist",
  "baseUrl": "./",
  "paths": {
    "@/*": ["./src/*"],
    "@core/*": ["./src/core/*"],
    "@adapter/*": ["./src/adapter/*"]
  },
  "lib": ["ESNext", "DOM"], 
  "esModuleInterop": true,
  "forceConsistentCasingInFileNames": true,
  "strict": true,
  "skipLibCheck": true
},
"include": ["src"]
}
